<launch>
	<machine name="husky" address="192.168.1.105" user="nick" env-loader="/opt/ros/hydro/env.sh"/>

	<include machine="husky" file="$(find husky_base)/launch/base.launch"/>

	<include file="$(find husky_teleop)/launch/teleop.launch"/>

	<node machine="husky" pkg="um6" type="um6_driver" name="um6_driver" respawn="true" >
    		<param name="port" type="string" value="/dev/ttyUSB1"/>
		<param name="mag_updates" type="bool" value="false"/>
  	</node>

  	<node machine="husky" pkg="tf" type="static_transform_publisher" name="imu_tf" args="0 0 0 0 0 0 base_link imu_link 10" respawn="true" />

	<include machine="husky" file="$(find husky_description)/launch/description.launch"/>

	<node machine="husky" pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf" respawn="true" >
		<remap from="odom" to="encoder"/>
		<remap from="imu_data" to="/imu/data"/>
		<rosparam file="$(find husky_2lrf_octomapping)/config/ekf_params.yaml" command="load" />
		<remap from="/robot_pose_ekf/odom" to="odom" />
  	</node>

	<node machine="husky" pkg="tf" type="static_transform_publisher" name="front_laser_tf" args="0.333 0 0.626 0 0 0 base_link front_laser 40" respawn="true"/>

	<node machine="husky" pkg="tf" type="static_transform_publisher" name="rear_laser_tf" args="-0.333 0 0.626 3.142 0 0 base_link rear_laser 40" respawn="true"/>

	<node machine="husky" pkg="LMS1xx" type="LMS100" name="front_laser" respawn="true">
		<param name="host" value="192.168.1.2"/>
		<param name="frame_id" value="front_laser"/>
	</node>

	<node machine="husky" pkg="LMS1xx" type="LMS100" name="rear_laser" respawn="true">
		<param name="host" value="192.168.1.3"/>
		<param name="frame_id" value="rear_laser"/>
	</node>

	<node machine="husky" pkg="topic_tools" type="relay" name="front_relay" args="/front_laser/scan scan" />

	<node machine="husky" pkg="topic_tools" type="relay" name="rear_relay" args="/rear_laser/scan scan" />

	<node machine="husky" pkg="laser_assembler" type="laser_scan_assembler" name="laser_scan_assembler" >
		<param name="fixed_frame" type="string" value="map" />
		<param name="max_scans" type="int" value="500" />
	</node>

	<node machine="husky" pkg="laser_assembler" type="periodic_snapshotter2" name="periodic_snapshotter" />

	<include machine="husky" file="$(find husky_navigation)/launch/gmapping.launch" />

	<node machine="husky" pkg="octomap_server" type="octomap_server_node" name="octomap">
		<remap from="cloud_in" to="assembled_cloud" />
		<param name="frame_id" type="string" value="map" />
	</node>

	<node machine="husky" pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
		<remap from="odom" to="encoder" />
		<rosparam file="$(find husky_2lrf_octomapping)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
   		<rosparam file="$(find husky_2lrf_octomapping)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    		<rosparam file="$(find husky_2lrf_octomapping)/config/local_costmap_params.yaml" command="load" />
    		<rosparam file="$(find husky_2lrf_octomapping)/config/global_costmap_params.yaml" command="load" />
    		<rosparam file="$(find husky_2lrf_octomapping)/config/base_local_planner_params.yaml" command="load" />
    		<remap from="cmd_vel" to="/husky/cmd_vel" />  
  	</node>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find husky_2lrf_octomapping)/rviz/2lrf.rviz" respawn="false" />
</launch>
